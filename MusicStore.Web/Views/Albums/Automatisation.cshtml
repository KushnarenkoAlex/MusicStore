@model IEnumerable<MusicStore.Entities.Album>
@{
    ViewBag.Title = "Automatisation";
}

<h2>Index</h2>

<table class="table">
    <tr>

        <th>
            Название альбома
        </th>
        <th>
            Исполнитель
        </th>
        <th>
            Продюсер
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Circulation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Circulation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.ActionLink("Записать в график", "DateChoosing", new { id = item.AlbumId })
            </td>
        </tr>
    }

</table>
