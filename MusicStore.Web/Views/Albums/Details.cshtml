@model MusicStore.Entities.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Исполнитель
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>

        <dt>
            Продюсер
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producer.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Circulation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Circulation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Название песни</th>
                    <th>Genre</th>
                    <th>Длительность</th>
                </tr>
                @foreach (var item in Model.Songs)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Name, "Details", "Songs", new { id = item.AlbumId }, null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Songs", new { id = item.AlbumId }, null) |
                            @Html.ActionLink("Details", "Details", "Songs", new { id = item.AlbumId }, null) |
                            @Html.ActionLink("Delete", "Delete", "Songs", new { id = item.AlbumId }, null)
                        </td>
                    </tr>
                }

            </table>
        </dd>
        <dd>
            @using (Html.BeginForm("Details", "Albums", new { id = Model.AlbumId, createReport = true }, FormMethod.Post, new { target = "_blank" }))
            {<input class="btn btn-default" type="submit" value="Show album info">}
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AlbumId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
